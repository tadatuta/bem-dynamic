@media screen and (max-width: 479px) {
    .scroll-btn_scroll {
        left: 50%;
        bottom: 0;
        margin: -2.1875em;
        position: absolute;
        visibility: visible;
        opacity: 1;
        -moz-transform: translateY(0);
        -ms-transform: translateY(0);
        -webkit-transform: translateY(0);
        transform: translateY(0);
        width: 4.375em;
        height: 4.375em
    }
    .scroll-btn_scroll .arrow:before {
        font-size: .9em;
        line-height: 4.86111
    }
}
